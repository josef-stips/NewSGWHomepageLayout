</body>

<script>
    let mainBoxGridForAnmaeldung = document.querySelector(".main-box-grid");

    // When page is loaded the main boxes get a fade in animation
    function MainBoxesAnimation() {
        for (const [i, val] of[...mainBoxGridForAnmaeldung.children].entries()) {
            let boxes = val.children[0];

            setTimeout(() => {
                boxes.style.opacity = "1";
            }, 100);
        };
    };
    MainBoxesAnimation();
</script>

</html>